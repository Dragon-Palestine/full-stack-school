const { Sequelize } = require('sequelize');
require('dotenv').config();

const sequelize = new Sequelize(
  process.env.MYSQLDATABASE,   // اسم قاعدة البيانات
  process.env.MYSQLUSER,       // اسم المستخدم
  process.env.MYSQLPASSWORD,   // كلمة المرور
  {
    host: process.env.MYSQLHOST,  // المضيف
    port: process.env.MYSQLPORT,  // البورت
    dialect: 'mysql',
    logging: false,               // لمنع طباعة اللوجات الكثيرة
  }
);

sequelize.authenticate()
  .then(() => console.log('Database connected successfully!'))
  .catch(err => console.error('Database connection failed:', err));

module.exports = sequelize;
