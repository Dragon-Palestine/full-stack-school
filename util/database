const { Sequelize } = require("sequelize");

// استخدم متغيرات البيئة مباشرة
const sequelize = new Sequelize(
  process.env.DB_NAME,       // اسم قاعدة البيانات
  process.env.DB_USER,       // اسم المستخدم
  process.env.DB_PASSWORD,   // كلمة المرور
  {
    host: process.env.DB_HOST,   // المضيف
    port: process.env.DB_PORT || 3306, // المنفذ
    dialect: "mysql",
    logging: false
  }
);

// اختبار الاتصال بالقاعدة
sequelize.authenticate()
  .then(() => console.log('✅ Database connected successfully!'))
  .catch(err => console.error('❌ Database connection failed:', err));

module.exports = sequelize;
