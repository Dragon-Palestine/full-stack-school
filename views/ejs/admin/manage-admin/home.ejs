<%- include('../../include/head.ejs') %> 
<body> 
<div class="dashboard"> 

    <!-- Sidebar --> 
    <%- include('../../include/admin_side.ejs') %> 

    <!-- Main --> 
    <main class="main"> 

        <!-- Top Nav --> 
        <%- include('../../include/home_nav.ejs') %> 

        <!-- Page Header --> 
        <div class="dashboard-header"> 
            <div class="header-left"> 
                <h1 class="header-title"> 
                    <i class="fas fa-user-shield"></i> Manage Admins 
                </h1> 
            </div> 
        </div> 

        <!-- Cards --> 
        <div class="cards-container"> 

            <!-- Add Admin --> 
            <div class="card"> 
                <h2><i class="fas fa-user-plus"></i> Add New Admin</h2> 
                <p>Create a new admin account with permissions.</p> 
                <div class="btn-container"> 
                    <a href="/admin/manage_admin/add" class="btn">Add Admin</a> 
                </div> 
            </div> 

            <!-- View Admins --> 
            <div class="card"> 
                <h2><i class="fas fa-users-cog"></i> View Admins</h2> 
                <p>Show all existing admins in the system.</p> 
                <div class="btn-container"> 
                    <a href="/admin/manage_admin/list" class="btn">Show Admins</a> 
                </div> 
            </div> 

            <!-- Manage Permissions --> 
            <div class="card"> 
                <h2><i class="fas fa-user-lock"></i> Manage Permissions</h2> 
                <p>Edit roles and access permissions.</p> 
                <div class="btn-container"> 
                    <a href="/admin/manage_admin/manage_permission" class="btn">Edit Permissions</a> 
                </div> 
            </div> 

        </div> 

    </main> 
</div> 
</body> 
</html>
