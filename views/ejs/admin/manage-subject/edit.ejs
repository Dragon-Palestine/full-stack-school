<%- include('../../include/head.ejs') %> 
<body>
<div class="dashboard">

    <!-- Sidebar -->
    <%- include('../../include/admin_side.ejs') %>

    <!-- Main Content -->
    <main class="main">

        <!-- Top Navbar -->
        <%- include('../../include/home_nav.ejs') %>

        <!-- Page Header -->
        <div class="dashboard-header">
            <div class="header-left">
                <h1 class="header-title">
                    <i class="fas fa-book"></i> Manage Subjects
                </h1>
            </div>
        </div>

        <!-- Edit Subject Form -->
        <section class="form-panel">
            <h2><i class="fas fa-edit"></i> Edit Subject</h2>

            <form action="/admin/manage_subject/edit" method="POST" class="neon-form">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" value="<%=subject.name%>" required>
                </div>

                <div class="form-group">
                    <label for="code">Code</label>
                    <input type="text" name="code" id="code" value="<%=subject.code%>" required>
                </div>

                <div class="form-group">
                    <label for="hours">Hours</label>
                    <input type="number" name="hours" id="hours" value="<%=subject.hours%>" required>
                </div>

                <input type="hidden" name="preCode" value="<%=subject.code%>">
                <input type="hidden" name="preName" value="<%=subject.name%>">

                <div class="btn-container">
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </section>

    </main>
</div>
</body>
</html>
