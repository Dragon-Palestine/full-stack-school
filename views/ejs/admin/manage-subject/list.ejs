<%- include('../../include/head.ejs') %>

<body>
<div class="dashboard">

    <!-- Sidebar -->
    <%- include(`../../include/admin_side.ejs`) %>

    <!-- Main -->
    <main class="main">

        <!-- Top Nav -->
        <%- include('../../include/home_nav.ejs') %>

        <!-- Page Header -->
        <div class="dashboard-header">
            <div class="header-left">
                <h1 class="header-title">
                    <i class="fas fa-table"></i> subject List
                </h1>
                <p class="header-subtitle">
                    Manage all subjects in the system
                </p>
            </div>
        </div>

        <!-- Cards/Table Container -->
        <div class="cards-container">
            <section class="student-panel">
                <div class="student-table-box">
                    <table class="student-table">
                        <% if(subjects && subjects.length > 0) { %>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Code</th>
                                <th>Hours</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% subjects.forEach(subject => { %>
                                <tr>
                                    <td><%= subject.name %></td>
                                    <td><%= subject.code %></td>
                                    <td><%= subject.hours %></td>
                                    <td>
                                        <a href="/admin/manage_subject/edit/<%= subject.code %>" class="btn sm">Edit</a>
                                        <a href="/admin/manage_subject/delete/<%= subject.code %>" class="btn sm danger">Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" style="text-align:center;">No subjects found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <div class="">
                        <a href="/admin/manage_subject/add" class="btn">Add Subject</a>
                        <a href="/admin" class="btn outline">Back</a>
                    </div>
                </div>
            </section>
        </div>

    </main>
</div>
</body>
</html>
