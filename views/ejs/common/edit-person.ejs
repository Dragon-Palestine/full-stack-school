<!-- views/addAdmin.ejs -->
<%- include('../include/head.ejs') %>
<body>
<div class="dashboard">
    <%- include(`../include/${role}_side.ejs`) %>
    <main class="main">
        <%- include('../include/home_nav.ejs') %>

        <section class="form-panel">
            <h1><i class="fas fa-user-shield"></i> Edit <%=person.role%></h1>

            <form action="<%=link%>" method="POST" class="neon-form">
                <!-- Person Info -->
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" value="<%=person.name%>" />
                </div>
                <div class="form-group">
                    <label for="age">Age</label>
                    <input type="number" name="age" id="age" value="<%=person.age%>"/>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" value="<%=person.email%>"/>
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="text" name="phone" id="phone" value="<%=person.phone%>" />
                </div>
                <div class="form-group">
                    <label for="gender">Gender</label>
                    <input type="text" name="gender" id="gender" value="<%=person.gender%>" />
                </div>

                <input type="hidden" name="personId" value="<%=person.id%>">
                <button type="submit" class="submit-btn">Edit <%=person.role%></button>
            </form>
        </section>
    </main>
</div>
</body>
</html>
