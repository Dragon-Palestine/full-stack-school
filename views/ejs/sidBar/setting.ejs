<%- include('../include/head.ejs') %>

<link rel="stylesheet" href="/css/setting.css">

<body>
<div class="dashboard">

    <!-- Sidebar -->
    <%- include(`../include/${role}_side.ejs`) %>

    <!-- Main -->
    <main class="main">

        <!-- Top Nav -->
        <%- include('../include/home_nav.ejs') %>

        <!-- Page Header -->
        <div class="dashboard-header">
            <div class="header-left">
                <h1 class="header-title">
                    <i class="fas fa-user-cog"></i> Settings
                </h1>
                <p class="header-subtitle">
                    Update your personal information and password
                </p>
            </div>
        </div>

        <!-- ================= FORM START ================= -->
        <form action="/setting" method="POST">
            <input type="hidden" name="personId" value="<%=person.id%>">

            <div class="cards-container">

                <!-- ================= Personal Info ================= -->
                <div class="card">
                    <h2><i class="fas fa-id-card"></i> Personal Information</h2>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="name" value="<%= person.name %>" required>
                    </div>

                    <div class="form-group">
                        <label>Age</label>
                        <input type="number" name="age" value="<%= person.age %>">
                    </div>

                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" name="phone" value="<%= person.phone %>">
                    </div>

                    <div class="form-group">
                        <label>Gender</label>
                        <input type="text" name="gender" value="<%= person.gender %>">
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" name="email" value="<%= person.email %>">
                    </div>
                </div>

                <!-- ================= Password ================= -->
                <div class="card">
                    <h2><i class="fas fa-lock"></i> Change Password</h2>

                    <div class="form-group">
                        <label>Old Password</label>
                        <input
                            type="password"
                            name="oldPassword"
                            placeholder="Enter your current password"
                        >
                    </div>

                    <div class="form-group">
                        <label>New Password</label>
                        <input
                            type="password"
                            name="password"
                            placeholder="Leave empty if no change"
                        >
                    </div>

                    <div class="form-group">
                        <label>Confirm New Password</label>
                        <input
                            type="password"
                            name="confirmPassword"
                            placeholder="Confirm new password"
                        >
                    </div>
                </div>

            </div>

            <br>

            <div class="card">
                <h2><i class="fas fa-lock"></i> Change User Name</h2>

                <div class="form-group">
                    <label>New UserName</label>
                    <input
                        type="text"
                        name="userName"
                        placeholder="Leave empty if no change"
                    >
                </div>
            </div>

            <!-- ================= SAVE BUTTON ================= -->
            <div class="btn-container">
                <button type="submit" class="btn">
                    <i class="fas fa-save"></i> Save Changes
                </button>
            </div>

        </form>
        <!-- ================= FORM END ================= -->

    </main>
</div>
</body>
</html>
